{
  "name": "skybound-realms",
  "version": "1.0.0",
  "description": "A sandbox MMORPG with Minecraft-style building and deep RPG systems",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/start.js",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:unit": "vitest --run src/test/**/*.test.ts",
    "test:integration": "vitest --run src/test/integration/**/*.test.ts",
    "test:e2e": "ts-node src/test/e2e/runner.ts",
    "test:e2e:workflows": "vitest --run src/test/e2e/workflows/**/*.test.ts --testTimeout=120000",
    "test:e2e:performance": "vitest --run src/test/e2e/performance/**/*.test.ts --testTimeout=180000 --no-threads",
    "test:e2e:ci": "vitest --run src/test/e2e/ci/**/*.test.ts --testTimeout=90000",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e:workflows",
    "test:db": "ts-node src/scripts/test-database.ts",
    "migrate": "ts-node scripts/migrate.ts",
    "migrate:rollback": "ts-node scripts/migrate.ts rollback",
    "migrate:status": "ts-node scripts/migrate.ts status",
    "deploy": "bash scripts/deploy.sh",
    "deploy:dev": "bash scripts/deploy.sh development",
    "deploy:staging": "bash scripts/deploy.sh staging",
    "deploy:prod": "bash scripts/deploy.sh production",
    "health-check": "bash scripts/health-check.sh",
    "docker:build": "docker build -t skybound-realms .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mmorpg",
    "sandbox",
    "multiplayer",
    "game"
  ],
  "author": "Skybound Realms Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "socket.io": "^4.7.2",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vitest": "^0.34.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
