# Staging Environment Configuration
NODE_ENV=staging
PORT=3000
SERVER_PORT=3000

# Database Configuration
DB_HOST=staging-postgres
DB_PORT=5432
DB_NAME=skybound_realms_staging
DB_USER=skybound_staging
DB_PASSWORD=${STAGING_DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://staging-redis:6379
REDIS_PASSWORD=${STAGING_REDIS_PASSWORD}

# Security
JWT_SECRET=${STAGING_JWT_SECRET}
JWT_EXPIRES_IN=12h
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=https://staging.skybound-realms.com

# Logging
LOG_LEVEL=info
LOG_FILE=logs/staging.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000

# Cache TTL (seconds)
CACHE_TTL_SHORT=600
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=7200

# Game Configuration
MINION_PROCESSING_INTERVAL=300000
RESOURCE_RESPAWN_TIME=1800000
MARKET_LISTING_DURATION=604800000

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000