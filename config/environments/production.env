# Production Environment Configuration
NODE_ENV=production
PORT=3000
SERVER_PORT=3000

# Database Configuration
DB_HOST=${PROD_DB_HOST}
DB_PORT=5432
DB_NAME=skybound_realms
DB_USER=skybound
DB_PASSWORD=${PROD_DB_PASSWORD}

# Redis Configuration
REDIS_URL=redis://${PROD_REDIS_HOST}:6379
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}

# Security
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRES_IN=8h
BCRYPT_ROUNDS=14

# CORS
CORS_ORIGIN=https://skybound-realms.com,https://www.skybound-realms.com

# Logging
LOG_LEVEL=warn
LOG_FILE=logs/production.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=30

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_HEARTBEAT_TIMEOUT=5000

# Cache TTL (seconds)
CACHE_TTL_SHORT=900
CACHE_TTL_MEDIUM=7200
CACHE_TTL_LONG=14400

# Game Configuration
MINION_PROCESSING_INTERVAL=300000
RESOURCE_RESPAWN_TIME=1800000
MARKET_LISTING_DURATION=604800000

# Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_COLLECTION_INTERVAL=60000

# Performance
CLUSTER_WORKERS=${CLUSTER_WORKERS:-0}
MAX_MEMORY_USAGE=1024